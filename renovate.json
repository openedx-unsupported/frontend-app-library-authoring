{
  "extends": [
    "config:base",
    ":dependencyDashboard"
  ],
  "patch": {
    "automerge": true
  },
  "rebaseStalePrs": true,
  "packageRules": [
    {
      "matchPackagePatterns": ["@edx", "@openedx"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "matchPackagePatterns": ["@edx/frontend-lib-content-components"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "schedule": [
        "before 4am"
      ]
    }
  ]
}
